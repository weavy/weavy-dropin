{
  "private": true,
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "build": "npm-run-all clean --parallel css js",
    "clean": "rimraf wwwroot/{css,js}/*",
    "css": "npm-run-all css-compile css-prefix css-minify",
    "css-compile": "sass --style=expanded --no-source-map --no-error-css scss:wwwroot/css",
    "css-minify": "cleancss -O1 --format breakWith=lf --with-rebase --output wwwroot/css/ --batch --batch-suffix \"\" \"wwwroot/css/*.css\"",
    "css-prefix": "postcss --replace \"wwwroot/css/*.css\"",
    "js": "webpack --mode production",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css": "sass --style=expanded --embed-sources scss/:wwwroot/css/ --watch --color",
    "watch-js": "webpack --mode development --watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "clean-css-cli": "^5.6.1",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.27.0",
    "eslint-webpack-plugin": "^3.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.56.1",
    "terser-webpack-plugin": "^5.3.6",
    "underscore": "^1.13.6",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.3.0",
    "@codemirror/commands": "^6.1.2",
    "@codemirror/lang-markdown": "^6.0.5",
    "@codemirror/language": "^6.3.0",
    "@codemirror/language-data": "^6.1.0",
    "@codemirror/state": "^6.1.3",
    "@codemirror/view": "^6.4.2",
    "@hotwired/stimulus": "^3.1.1",
    "@hotwired/turbo": "^7.2.4",
    "@microsoft/signalr": "^6.0.4",
    "@popperjs/core": "^2.11.6",
    "bootstrap": "^5.2.2",
    "pdfjs-dist": "^3.2.146"
  },
  "engines": {
    "node": ">=19.3.0",
    "npm": ">=9.2.0"
  }
}
