{
  "private": true,
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "build": "npm-run-all clean --parallel css js",
    "clean": "rimraf wwwroot/{css,js}/*",
    "css": "npm-run-all css-compile css-prefix css-minify",
    "css-compile": "sass --style expanded --no-source-map --no-error-css scss/:wwwroot/css/",
    "css-dev": "sass --style expanded --embed-sources --no-error-css scss/:wwwroot/css/",
    "css-minify": "cleancss -O1 --format breakWith=lf --with-rebase --output wwwroot/css/ --batch --batch-suffix \"\" \"wwwroot/css/*.css\"",
    "css-prefix": "postcss --replace \"wwwroot/css/*.css\"",
    "dev": "npm-run-all --parallel css-dev js-dev",
    "js": "webpack --mode production",
    "js-dev": "webpack --mode development",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css": "nodemon --watch scss/ --ext scss --exec \"npm run css-dev\"",
    "watch-js": "webpack --mode development --watch"
  },
  "devDependencies": {
    "@babel/core": "7.16.7",
    "@babel/eslint-parser": "7.16.5",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@babel/plugin-transform-runtime": "7.16.8",
    "@babel/preset-env": "7.16.8",
    "autoprefixer": "10.4.2",
    "babel-loader": "8.2.3",
    "clean-css-cli": "5.5.0",
    "eslint": "7.32.0",
    "eslint-webpack-plugin": "3.1.1",
    "nodemon": "2.0.15",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.5",
    "postcss-cli": "9.1.0",
    "rimraf": "3.0.2",
    "sass": "1.49.0",
    "terser-webpack-plugin": "5.3.0",
    "webpack": "5.66.0",
    "webpack-cli": "4.9.1"
  },
  "dependencies": {
    "@codemirror/commands": "0.19.7",
    "@codemirror/highlight": "0.19.7",
    "@codemirror/lang-markdown": "0.19.4",
    "@codemirror/language-data": "0.19.1",
    "@codemirror/state": "0.19.6",
    "@codemirror/view": "0.19.39",
    "@hotwired/stimulus": "3.0.1",
    "@hotwired/turbo": "7.1.0",
    "@microsoft/signalr": "6.0.1",
    "@popperjs/core": "2.11.2",
    "bootstrap": "5.1.3",
    "highlight.js": "11.4.0",
    "pdfjs-dist": "2.12.313"
  }
}
