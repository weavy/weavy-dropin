@model IReactable

<turbo-frame id="modal">
    <div class="modal fade" tabindex="-1" aria-hidden="true" data-controller="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title">@T["Reactions"]</h5>
                    <button type="button" class="btn btn-icon" data-bs-dismiss="modal"><icon name="close" /></button>
                </div>
                <div class="modal-body">

                    @foreach (var user in Model.Reacted()) {
                        <div class="reaction">
                            <avatar for="user" />
                            <emoji name="@Model.Reactions.Reaction(user.Id)" />
                            @user.GetTitle()
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</turbo-frame>
