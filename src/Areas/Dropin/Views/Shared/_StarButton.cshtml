@model IStarrable

@if (Model.IsStarred()) {
    <form id="@DomId(Model)" asp-controller="@typeof(EntityController).ControllerName()" asp-action="@nameof(EntityController.Unstar)" asp-route-id="@Model.Uid()">
        <button type="submit" class="wy-button wy-button-icon"><icon name="star" /></button>
    </form>
} else if (Action == nameof(EntityController.Unstar)) {
    <form id="@DomId(Model)" asp-controller="@typeof(EntityController).ControllerName()" asp-action="@nameof(EntityController.Star)" asp-route-id="@Model.Uid()">
        <button type="submit" class="wy-button wy-button-icon"><icon name="star-outline" /></button>
    </form>
} else if (Model.HasPermission(Permission.Read)) {
    <div id="@DomId(Model)"></div>
}



