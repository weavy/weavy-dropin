@model Meeting

<div class="card mb-3 bg-white p-2 rounded-3">
  <div class="row g-0">
    <div class="col-md-4">
      @Svg.Icon("microsoft-teams", color: "native", size: 64)
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title text-black">@T["Teams meeting"]</h5>
        <p class="card-text">
          @if (Model.EndedAt != null) {
            <small class="text-muted">@T["Meeting ended"]: <time>@Model.EndedAt</time> </small>
          } else if (Model.CreatedById == WeavyContext.Current.User.Id) {
            <a href="@Model.JoinUrl" target="_blank" class="btn btn-sm btn-primary mt-2">@T["Start meeting"]</a>
          } else {
            <a href="@Model.JoinUrl" target="_blank" class="btn btn-sm btn-primary mt-2">@T["Join meeting"]</a>
          }
        </p>
      </div>
    </div>
  </div>
</div>
