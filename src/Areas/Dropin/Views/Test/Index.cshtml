</section>

<section class="wy-test-section">
  <h2 class="wy-headline">Reactions</h2>
  <div class="wy-reactions-line">
    @* reactions *@
    <a href="#reactions" class="wy-button wy-reactions wy-button-icon">
      <emoji name="😍" />
