  <div class="wy-card">
    <div class="wy-card-content">
      <input type="text" class="wy-input" />
      <br />
      <input type="text" class="wy-input wy-input-filled" />
      <br />
      <form class="wy-search-form" role="search">
        <div class="wy-input-group">
          <input type="search" class="wy-search-input wy-input wy-input-filled" name="text" value="" placeholder="@T["Search..."]" autocomplete="off">
          <button type="reset" class="wy-button wy-button-icon" title="@T["Clear"]" data-search-target="reset"><icon name="close-circle" size="20" /></button>
