  <div class="wy-comment">
    <div class="wy-comment-body">
      &nbsp;<br />&nbsp;
    </div>
    <div class="wy-reactions-line">
      @* reactions *@
      <a href="#reactions" class="wy-button wy-button-icon wy-reactions">
        <emoji name="😍" />
        <emoji name="😆" />
        <emoji name="👍" />
        <emoji name="❤️" />
        <small class="wy-reaction-count">1234</small>
      </a>

      @* reaction menu *@
      <div class="wy-dropdown dropup">
        <button type="button" class="wy-button wy-button-icon wy-reaction-menu-button" data-bs-toggle="dropdown" title="Add reaction"><icon name="emoticon-plus" size="20" /></button>
        <div class="wy-reaction-menu wy-dropdown-menu dropdown-menu">
          <form class="wy-reaction-picker">
            <button type="submit" class="wy-button wy-button-icon"><emoji name="😍" /></button>
            <button type="submit" class="wy-button wy-button-icon wy-active"><emoji name="😆" /></button>
            <button type="submit" class="wy-button wy-button-icon"><emoji name="😮" /></button>
            <button type="submit" class="wy-button wy-button-icon"><emoji name="😢" /></button>
            <button type="submit" class="wy-button wy-button-icon"><emoji name="😡" /></button>
          </form>
        </div>
      </div>


    </div>
  </div>
</section>

